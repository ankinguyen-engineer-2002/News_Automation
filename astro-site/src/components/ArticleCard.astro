---
export interface Props {
  number: number;
  date: string;
  title: string;
  title_vi?: string;
  source: string;
  excerpt: string;
  excerpt_vi?: string;
  url: string;
  slug: string;
  topic: string;
}

const { number, date, title, title_vi, source, excerpt, excerpt_vi, url, slug, topic } = Astro.props;

const topicColors: Record<string, string> = {
  'microsoft': 'bg-blue-100 text-blue-700',
  'data-platform': 'bg-orange-100 text-orange-700',
  'analytics-engineering': 'bg-green-100 text-green-700',
  'ai-agents': 'bg-purple-100 text-purple-700',
  'automation': 'bg-pink-100 text-pink-700',
  'github': 'bg-gray-100 text-gray-700',
};

const colorClass = topicColors[topic] || 'bg-slate-100 text-slate-700';
---

<article class="group p-4 border border-slate-200 rounded-xl hover:border-slate-300 hover:shadow-sm transition-all">
  <div class="flex items-start gap-4">
    <!-- Number Badge -->
    <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center bg-slate-900 text-white rounded-lg font-mono text-lg font-bold">
      #{String(number).padStart(2, '0')}
    </div>
    
    <!-- Content -->
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 mb-1 text-sm text-slate-500">
        <time class="font-mono">{date}</time>
        <span>·</span>
        <span class={`px-2 py-0.5 rounded text-xs font-medium ${colorClass}`}>{source}</span>
      </div>
      
      <h3 class="font-semibold text-slate-900 group-hover:text-indigo-600 transition-colors line-clamp-2 mb-2">
        <a href={`/article/${slug}`} class="hover:underline" data-lang-en>
          {title}
        </a>
        {title_vi && (
          <a href={`/article/${slug}`} class="hover:underline hidden" data-lang-vi>
            {title_vi}
          </a>
        )}
      </h3>
      
      <p class="text-sm text-slate-600 line-clamp-2" data-lang-en>
        {excerpt}
      </p>
      {excerpt_vi && (
        <p class="text-sm text-slate-600 line-clamp-2 hidden" data-lang-vi>
          {excerpt_vi}
        </p>
      )}
      
      <a 
        href={url} 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1 mt-2 text-xs text-slate-400 hover:text-slate-600"
      >
        Read original →
      </a>
    </div>
  </div>
</article>
